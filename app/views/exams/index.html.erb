  <div class="span9 ">

<div class="page-header">
  <h1>考试管理</h1>

</div>
<%= link_to '定义考试', new_exam_path,{:class=>'btn '} %>
<div>
  <table class="table">
    <thead>
  <tr>
    <th>名称</th>
    <th>状态</th>
    <th>操作</th>
  </tr>

</thead>
<tbody>
<% @exams.each do |exam| %>
