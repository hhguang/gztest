<div class="row-fluid">
  <div class="span3">
    <%= render :partial=>'/admin/left'  %>
  </div>
  <div class="span9">
   <div class="page-header">
      <h1>试卷订单管理</h1>
    </div>
    <div style="padding: 10px;"  class="btn-group">
      <a class="btn" href="/paper_orders">全部</a>
      <a class="btn" href="/paper_orders/new">发布</a>
    </div>

    <div style="padding: 10px;">
      <%= link_to @paper_order.name,paper_order_order_items_url(@paper_order) %>
    </div>

    <ul class="nav nav-tabs" id="myTab">
<li class="active"><a href="#home" data-toggle="tab">已提交订单</a></li>
<li><a href="#profile" data-toggle="tab">未提交订单学校</a></li>

</ul>

<div class="tab-content">
<div class="tab-pane active" id="home">
  <table class="table table-bordered">
  <tr>

    <th>学校</th>
    <th>School name</th>
  </tr>

<% @order_items.each do |order_item| %>
  <tr>

    <td><%=h order_item.school_id %></td>
    <td><%=h order_item.school_name %></td>
    <td><%= link_to 'Show', order_item %></td>
    <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
    <td><%= link_to 'Destroy', paper_order_order_item_path(@paper_order,order_item), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<div class="tab-pane" id="profile">
  <% (School.all-@order_items.collect{|i| i.school }).each do |school| %>
  <%= school.name %><br/>
  <% end %>
</div>

</div>




  </div>
</div>
