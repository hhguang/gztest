<script src="/assets/js/jquery.js"></script>
<script src="/bootstrap/js/bootstrap.js"></script>
  </head>

  <body>

    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">
成绩文件上传
</a>
          <div class="btn-group pull-right">
            <% if logged_in? %>
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> <%= current_user.login %>
              |
              <% if current_user.is_admin? %>
              管理员<%= "：#{Qx.find(current_user.qx_id).name}" if current_user.qx_id %>
              <% else %>
              <%= "#{current_user.school.name}" if current_user.school  %>
              <% end %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="/welcome/person/<%= current_user.id %>">个人设置</a></li>
              <li class="divider"></li>
              <% if current_user.is_admin? %>
              <li><a href="/admin">管理</a></li>
              <li class="divider"></li>
              <% end %>
              <li><a href="/logout">退出</a></li>
            </ul>
            <% else %>
            <a class="btn" href="/login">登录</a>
            <% end %>
          </div>
          <div class="nav-collapse">
            <ul class="nav">
              <li <%= 'class="active"' if controller_name=='welcome' && action_name=='index' %> >
                <a href="/">首页</a></li>
              <li <%= 'class="active"' if controller_name=='welcome' && action_name=='help' %> >
                <a href="/welcome/help">帮助</a></li>
              <%#*<li><a href="#contact">Contact</a></li>%>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container" >
      <% if flash[:notice] %>
        <div id="notice" class="alert alert-success">
          <button class="close" data-dismiss="alert">×</button>
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:error] %>
      
        <div id="error" class="alert alert-error">
          <button class="close" data-dismiss="alert">×</button>
          <%= flash[:error] %>
        </div>
      <% end %>
      <%= yield %>
    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
  
  </body>
</html>
