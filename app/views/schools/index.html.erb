<div class="row-fluid">
  <div class="span3">
    <%= render :partial=>'/admin/left'  %>
  </div>
  <div class="span9">
    <div class="page-header">
      <h1>学校管理</h1>
    </div>
<%= link_to '新建学校', new_school_path,{:class=>'btn'} %>

<table class="table table-striped">
  <tr>
    <th>代码</th>
    <th>名称</th>
    <th>区县</th>
    <th>操作</th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%=h school.code %></td>
    <td><%=h school.name %></td>
    <td><%=h school.qx_id %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


  </div>
</div>
