<div class="row-fluid">
  <div class="span3">
    <%= render :partial=>'left'  %>
  </div>
  <div class="span9">
    <div class="page-header">
      <h1>用户管理</h1>
    </div>
    <a class="btn" href="/admin/user_new">创建用户</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>用户名</th>
          <th>姓名</th>
          <th>学校</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.login %></td>
            <td><%= user.name %></td>
            <td><%= user.school.name if user.school %></td>
            <td>
              <a href="/admin/user_edit/<%= user.id %>">编辑</a> |
              <%= link_to '删除', {:action=>'user_destroy',:id=>user}, :confirm => '确定要删除吗?', :method => :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
